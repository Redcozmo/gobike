<input type="text" id="myInput" onkeyup="searchBarTables()" placeholder="Rechercher un produit par ville..." title="Rentrer un nom">
<div class="table-responsive">
  <table id="myTable" data-toggle="table" class="table table-striped table-hover" style="width:100%">
    <tr>
      <th data-sortable="true">Id</th>
      <th data-sortable="true">Name</th>
      <th data-sortable="true">City</th>
      <th data-sortable="true">Compagny</th>
      <th data-sortable="true">Href</th>
    </tr>
    <% @networks["networks"].select { |e| e["location"]["country"] == "FR" }.each do |company| %>
    <tr>
      <td><%= company["id"] %></td>
      <td><%= company["name"] %></td>
      <td><%= company["location"]["city"] %></td>
      <td><%= company["company"] %></td>
      <td><%= company["href"] %></td>
    </tr>
    <% end %>
  </table>
</div>
